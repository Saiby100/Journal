#:import Theme utils.theme.Theme

<Login>:
    MDBoxLayout:
        orientation: "vertical"
        canvas.before:
            Rectangle:
                size: self.size[0], self.size[1]
                pos: self.pos
                source: Theme.get_login_bg()

            Color:
                rgba: 1, 0, 0, .8
    
    MDGridLayout:
        cols: 2

        DetailsLayout:
            id: details_layout
            spacing: 40

            MDAnchorLayout:
                id: back_btn_layout
                anchor_x: "left"
                anchor_y: "top"
                padding: 10

            TextButton:
                id: login_btn
                text: "Log In"
                pos_hint: {'center_x': .5, 'top': .8}
                on_release: root.login_pressed()

            TextButton:
                id: signup_btn
                text: "Sign Up"
                pos_hint: {'center_x': .5, 'top': .65}
                on_release: root.signup_pressed()
            
            Gif:
                id: gif_normal
                source: "resources/gifs/boy.gif"
                pos_hint: {"center_x": .5, "top": .32}
            
            Gif:
                id: gif_curious
                source: "resources/gifs/boy_huh.gif"
                size: 90, 90 
                pos_hint: {"center_x": .5, "top": .32}
                opacity: 0.0
        
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: .865